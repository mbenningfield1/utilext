#
# Tests for the dec_cmp() function
#
#===============================================================================

source errors.tcl
setup db


test null_lhs {Verify NULL return for NULL lhs arg} -body {
  return [elem0 [db eval {select dec_cmp(NULL, '3.2');}]]
} -result NULL


test null_rhs {Verify NULL return for NULL rhs arg} -body {
  return [elem0 [db eval {select dec_cmp('2.3', NULL);}]]
} -result NULL


test greater {Verify lhs > rhs} -body {
  return [elem0 [db eval {select dec_cmp('3.2', '2.3');}]]
} -result 1


test equal {Verify lhs == rhs} -body {
  return [elem0 [db eval {select dec_cmp('2.3', '2.30');}]]
} -result 0


test less {Verify lhs < rhs} -body {
  return [elem0 [db eval {select dec_cmp('3.2', '4.5');}]]
} -result -1


test lhs_invalid {Verify parse error on non-numeric lhs arg} -body {
  db eval {select dec_cmp('fred', '3.2');}
} -returnCodes 1 -result $SqliteFormat


test rhs_invalid {Verify parse error on non-numeric rhs arg} -body {
  db eval {select dec_cmp('3.2', 'fred');}
} -returnCodes 1 -result $SqliteFormat


db close
tcltest::cleanupTests