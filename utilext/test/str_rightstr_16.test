#
# Tests for the rightstr() function using UTF-16 database encoding
#
#===============================================================================

source errors.tcl
setup_16 db


test source_null {Verify NULL return for NULL source arg} -body {
  return [elem0 [db eval {select rightstr(NULL, 3);}]]
} -result NULL


test len_null {Verify source return for NULL length arg} -body {
  return [elem0 [db eval {select rightstr('Hello World', NULL);}]]
} -result {Hello World}


test len_long {Verify source return for over-long length arg} -body {
  return [elem0 [db eval {select rightstr('Hello World', 14);}]]
} -result {Hello World}


test normal {Verify normal result} -body {
  return [elem0 [db eval {select rightstr('Hello World', 6);}]]
} -result { World}


test len_low {Verify error on too-low length arg} -body {
  db eval {select rightstr('Hello World', -1);}
} -returnCodes 1 -result $SqliteMisuse


test len_text {Verify conversion to int for text length arg} -body {
  return [elem0 [db eval {select rightstr('Hello World', '4');}]]
} -result orld


test len_real {Verify conversion to int for real length arg} -body {
  return [elem0 [db eval {select rightstr('Hello World', 4.50);}]]
} -result orld


test unicode {Verify actual character count with unicode text} -body {
  setup_unicode16 pdb
  set a [pdb eval {select rightstr(source, 12) from test_rightstr1;}]
  set b [pdb eval {select result from test_rightstr1;}]
  pdb close
  return [string equal $a $b]
} -result {1}


test unicode_long_chars {Verify that a length > char count but < byte count returns input} -body {
  setup_unicode16 pdb
  set a [pdb eval {select rightstr(source, 32) from test_rightstr2;}]
  set b [pdb eval {select result from test_rightstr2;}]
  pdb close
  return [string equal $a $b]
} -result {1}


db close
tcltest::cleanupTests