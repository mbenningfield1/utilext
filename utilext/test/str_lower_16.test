#
# Tests for the lower() function using UTF-16 database encoding
#
#===============================================================================

source errors.tcl
setup_16 db


test null {Verify NULL return for NULL arg} -body {
  return [elem0 [db eval {select lower(NULL);}]]
} -result NULL


test empty {Verify empty string return for empty arg} -body {
  return [elem0 [db eval {select lower('');}]]
} -result {}


test normal {Convert a string to lower-case} -body {
  return [elem0 [db eval {select lower('HelLo WoRld');}]]
} -result {hello world}


test unicode {Verify case folding with unicode chars} -body {
  setup_unicode16 pdb
  set a [pdb eval {select lower(source) from test_lower;}]
  set b [pdb eval {select result from test_lower;}]
  pdb close
  return [string equal $a $b]
} -result {1}


db close
tcltest::cleanupTests