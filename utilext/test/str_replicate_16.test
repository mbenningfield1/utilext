#
# Tests for the replicate() function using UTF-16 database encoding
#
#===============================================================================

source errors.tcl
setup_16 db


test source_null {Verify NULL return with NULL source arg} -body {
  return [elem0 [db eval {select replicate(NULL, 3);}]]
} -result NULL


test count_null {Verify NULL return with NULL count arg} -body {
  return [elem0 [db eval {select replicate('ab', NULL);}]]
} -result NULL


test source_empty {Verify empty return with empty source arg} -body {
  return [elem0 [db eval {select replicate('', 3);}]]
} -result {}


test count_zero {Verify empty return with zero count arg} -body {
  return [elem0 [db eval {select replicate('ab', 0);}]]
} -result {}


test single {Verify correct result with single character source} -body {
  return [elem0 [db eval {select replicate('b', 6);}]]
} -result bbbbbb


test string {Verify result with string source arg} -body {
  return [elem0 [db eval {select replicate('abc', 4);}]]
} -result abcabcabcabc


test count_low {Verify error with too low count arg} -body {
  db eval {select replicate('abb', -1);}
} -returnCodes 1 -result $SqliteMisuse


test unicode {Verify result with unicode chars} -body {
  setup_unicode16 pdb
  set a [pdb eval {select replicate(source, 4) from test_replicate;}]
  set b [pdb eval {select result from test_replicate;}]
  pdb close
  return [listEquals $a $b]
} -result {1}


db close
tcltest::cleanupTests