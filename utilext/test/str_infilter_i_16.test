#
# Tests for the infilter_i() function using UTF-16 database encoding
#
#===============================================================================

source errors.tcl
setup_16 db


test source_null {Verify NULL return for NULL source arg} -body {
  return [elem0 [db eval {select infilter_i(NULL, 'aeiou');}]]
} -result NULL


test match_null {Verify NULL return for NULL match arg} -body {
  return [elem0 [db eval {select infilter_i('abcde', NULL);}]]
} -result NULL


test source_empty {Verify empty string return for empty source arg} -body {
  return [elem0 [db eval {select infilter_i('', 'aeiou');}]]
} -result {}


test match_empty {Verify empty string return for empty match arg} -body {
  return [elem0 [db eval {select infilter_i('abcde', '');}]]
} -result {}


test normal {Verify normal matching} -body {
  return [elem0 [db eval {select infilter_i('albuquerque', 'aeiou');}]]
} -result auueue


test match_case {Verify case-insensitive matching} -body {
  return [elem0 [db eval {select infilter_i('Albuquerque', 'aeiou');}]]
} -result Auueue


test match_int {Verify conversion with integer match arg} -body {
  return [elem0 [db eval {select infilter_i('Angle is 45 degrees', 45);}]]
} -result 45


test match_real {Verify conversion with real match arg} -body {
  return [elem0 [db eval {select infilter_i('Temp is 98.6 degrees', 8.60);}]]
} -result 8.6


test match_real_cast {Verify casting exponential real to text has expected result} -body {
  return [elem0 [db eval {select infilter_i('Temp is 98.6 degrees', 0.000086);}]]
} -result e8.6eee ;# SQLite casts 0.000086 to '8.6e-05'


test unicode1 {Verify correct match with Unicode characters} -body {
  setup_unicode16 pdb
  set a [pdb eval {select infilter_i(source, match) from test_infilter_i where id = 1;}]
  set b [pdb eval {select result from test_infilter_i where id = 1;}]
  pdb close
  return [string equal $a $b]
} -result {1}


test unicode2 {Verify correct match with Unicode characters} -body {
  setup_unicode16 pdb
  set a [pdb eval {select infilter_i(source, match) from test_infilter_i where id = 2;}]
  set b [pdb eval {select result from test_infilter_i where id = 2;}]
  pdb close
  return [string equal $a $b]
} -result {1}


db close
tcltest::cleanupTests