#
# Tests for the reverse() function using UTF-16 database encoding
#
#===============================================================================

source errors.tcl
setup_16 db


test null {Verify NULL return with NULL arg} -body {
  return [elem0 [db eval {select reverse(NULL);}]]
} -result NULL


test empty {Verify empty return with empty arg} -body {
  return [elem0 [db eval {select reverse('');}]]
} -result {}


test single {Verify return with a single character source} -body {
  return [elem0 [db eval {select reverse('a');}]]
} -result a


test mirror {Verify result with palindrome} -body {
  return [elem0 [db eval {select reverse('ababa');}]]
} -result ababa


test normal {Verify string reversal} -body {
  return [elem0 [db eval {select reverse('Hello World');}]]
} -result {dlroW olleH}


test unicode {Verify result with unicode chars} -body {
  setup_unicode16 pdb
  set a [pdb eval {select reverse(source) from test_reverse;}]
  set b [pdb eval {select result from test_reverse;}]
  pdb close
  return [listEquals $a $b]
} -result {1}


db close
tcltest::cleanupTests