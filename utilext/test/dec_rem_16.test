#
# Tests for the dec_rem() function using UTF-16 database encoding
#
#===============================================================================

source errors.tcl
setup_16 db


test null_lhs {Verify NULL return for NULL lhs arg} -body {
  return [elem0 [db eval {select dec_rem(NULL, '2.5');}]]
} -result NULL


test null_rhs {Verify NULL return for NULL rhs arg} -body {
  return [elem0 [db eval {select dec_rem('2.5', NULL);}]]
} -result NULL


test integer {Verify correct integer remainder} -body {
  return [elem0 [db eval {select dec_rem('1000', '7');}]]
} -result 6


test zero {Verify correct zero remainder} -body {
  return [elem0 [db eval {select dec_rem('123.00000', '0.00123');}]]
} -result 0.00000


test near_zero {Verify small decimal remainder} -body {
  return [elem0 [db eval {select dec_rem('12345678900000000', '0.0000000012345678');}]]
} -result 0.000000000983


test near_quotient_one {Verify decimal remainder near quotient of 1} -body {
  return [elem0 [db eval {select dec_rem('123456789.0123456789', '123456789.1123456789');}]]
} -result 123456789.0123456789


test invalid_lhs {Verify parse error on non-numeri lhs arg} -body {
  db eval {select dec_rem('fred', '3.2');}
} -returnCodes 1 -result $SqliteFormat


test invalid_rhs {Verify parse error on non-numeric rhs arg} -body {
  db eval {select dec_rem('4.5', 'fred');}
} -returnCodes 1 -result $SqliteFormat


test div_zero {Verify div by zero error} -body {
  db eval {select dec_rem('5.6', '0.0');}
} -returnCodes 1 -result $SqliteError


test range_low {Verify range error on too small result} -body {
  db eval {select dec_rem(:DEC_MIN, '0.01');}
} -returnCodes 1 -result $SqliteTooBig


test range_high {Verify range error on too large result} -body {
  db eval {select dec_rem(:DEC_MAX, '0.01');}
} -returnCodes 1 -result $SqliteTooBig


db close
tcltest::cleanupTests