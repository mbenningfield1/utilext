#
# Tests for the timespan() function using UTF-16 database encoding
#
#===============================================================================

source errors.tcl
setup_16 db


test args1_iso {Verify correct result with ISO string arg in UTF-8 encoding} -body {
  return [elem0 [db eval {select timespan('1.03:04:05');}]]
} -result 974450000000


test str {Verify correct result with 'str' function} -body {
  return [elem0 [db eval {select timespan_str(timespan(12, 3, 23));}]]
} -result 12:03:23


test args1_invalid_iso_days {Verify invalid iso arg results in error} -body {
  db eval {select timespan('10950236521.00:00:00');}
} -returnCodes 1 -result $SqliteRange


test args1_invalid_iso_hours {Verify invalid iso arg results in error} -body {
  db eval {select timespan('1.85:04:05');}
} -returnCodes 1 -result $SqliteRange

test args1_invalid_iso_minutes {Verify invalid iso arg results in error} -body {
  db eval {select timespan('1.03:64:05');}
} -returnCodes 1 -result $SqliteRange


test args1_invalid_iso_seconds {Verify invalid iso arg results in error} -body {
  db eval {select timespan('1.03:04:75');}
} -returnCodes 1 -result $SqliteRange


test args1_invalid_iso_milliseconds {Verify invalid iso arg results in error} -body {
  db eval {select timespan('1.03:04:05.66523325');}
} -returnCodes 1 -result $SqliteRange


db close
tcltest::cleanupTests
