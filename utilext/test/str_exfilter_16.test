#
# Tests for the exfilter() function using UTF-16 database encoding
#
#===============================================================================

source errors.tcl
setup_16 db


test source_null {Verify NULL return for NULL source arg} -body {
  return [elem0 [db eval {select exfilter(NULL, 'aeiou');}]]
} -result NULL


test match_null {Verify NULL return for NULL match arg} -body {
  return [elem0 [db eval {select exfilter('abcde', NULL);}]]
} -result NULL


test source_empty {Verify empty string return for empty source arg} -body {
  return [elem0 [db eval {select exfilter('', 'aeiou');}]]
} -result {}


test match_empty {Verify source return for empty string match arg} -body {
  return [elem0 [db eval {select exfilter('abcde', '');}]]
} -result abcde


test match {Verify normal result} -body {
  return [elem0 [db eval {select exfilter('albuquerque', 'aeiou');}]]
} -result lbqrq


test match_case {Verify case-sensitive matching} -body {
  return [elem0 [db eval {select exfilter('Albuquerque', 'aeiou');}]]
} -result Albqrq


test match_int {Verify text conversion from integer match arg} -body {
  return [elem0 [db eval {select exfilter('Angle is 45 degrees', 4);}]]
} -result {Angle is 5 degrees}


test match_real {Verify text conversion from real match arg} -body {
  return [elem0 [db eval {select exfilter('Temp is 98.6 degrees', 8.60);}]]
} -result {Temp is 9 degrees}


test match_real_cast {Verify that a real match arg cast to e-notation has the expected results} -body {
  return [elem0 [db eval {select exfilter('Temp is 98.6 degrees', 0.000086);}]]
} -result {Tmp is 9 dgrs} ;# SQLite casts to 8.6e-05


test unicode {Verify match with unicode chars} -body {
  setup_unicode16 pdb
  set a [pdb eval {select exfilter(source, match) from test_exfilter where id = 1;}]
  set b [pdb eval {select result from test_exfilter where id = 1;}]
  pdb close
  return [string equal $a $b]
} -result {1}


test unicode_case {Verify case-sensitive matching with unicode chars} -body {
  setup_unicode16 pdb
  set a [pdb eval {select exfilter(source, match) from test_exfilter where id = 2;}]
  set b [pdb eval {select result from test_exfilter where id = 2;}]
  pdb close
  return [string equal $a $b]
} -result {1}


db close
tcltest::cleanupTests