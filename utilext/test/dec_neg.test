# Tests for the dec_neg() function
#
#===============================================================================

source errors.tcl
setup db


test null {Verify NULL return for NULL arg} -body {
  return [elem0 [db eval {select dec_neg(NULL);}]]
} -result NULL


test normal_pos {Verify correct answer with positive number} -body {
  return [elem0 [db eval {select dec_neg('3.2');}]]
} -result -3.2


test normal_neg {Verify correct answer with negative number} -body {
  return [elem0 [db eval {select dec_neg('-4.5');}]]
} -result 4.5


test invalid {Verify parse error with non-numeric arg} -body {
  db eval {select dec_neg('fred');}
} -returnCodes 1 -result $SqliteFormat


db close
tcltest::cleanupTests