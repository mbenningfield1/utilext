#
# Tests for the 1 arg dec_round() function
#
#===============================================================================

source errors.tcl
setup db


test null {Verify NULL return with NULL arg} -body {
  return [elem0 [db eval {select dec_round(NULL);}]]
} -result NULL


test normal {Round a decimal number} -body {
  return [elem0 [db eval {select dec_round('3.217459');}]]
} -result 3


test half_even {Verify default rounding down} -body {
  return [elem0 [db eval {select dec_round('2.5');}]]
} -result 2


test half_odd {Verify default rounding up} -body {
  return [elem0 [db eval {select dec_round('3.5');}]]
} -result 4


test invalid {Verify parse error on non-numeric arg} -body {
  db eval {select dec_round('fred');}
} -returnCodes 1 -result $SqliteFormat


db close
tcltest::cleanupTests